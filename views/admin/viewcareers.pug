extends ./header.pug
block append head 
  link(href="/public/css/viewProduct.css", rel='stylesheet')
block content
    .container-fluid
        a(href="/admin/viewCareers/"+career._id+"/edit") Edit Career
        form(action = "/admin/viewCareers/"+career._id+"/delete?_method=DELETE" enctype="multipart/form-data" method = "POST")
            button(type="submit") Delete Career
        h2 
            = "Title: " + career.title
        br
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
        -var count = 0
        each image of career.image
            -count += 1
        -for(let i=0;i<count;i++){
            -if(i==0){
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            -}
            -else{
                li(data-target="#carouselExampleIndicators" data-slide-to=i)
            -}
        -}    
        </ol>
        <div class="carousel-inner">
            -for(let i=0;i<count;i++){
                -if(i==0){
                    <div class="carousel-item active">
                        img(class="d-block w-100" src="/public/Careers/"+career.image[i].filename alt="First slide")
                    </div>
                -}
                -else{
                    <div class="carousel-item">
                        img(class="d-block w-100" src="/public/Careers/"+career.image[i].filename alt="First slide")
                    </div>
                -}
            -}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
        br
        h4 Career Type
            = "Type: " + career.type
        br
        h4 Career Salary
            = "Salary: " + career.Salary
        br
        h4 Career description
        ul 
            each para in career.description
                li
                    = para 
        br
        h4 Career responsibility
        ul 
            each para in career.responsibility
                li
                    = para 
        br
        h4 Career Qualifications
        ul 
            each para in career.qualification
                li
                    = para 
        br
        h4 Career Vacancy 
            = "Vacancy: " + career.Vacancy
        br
        

block append footer
