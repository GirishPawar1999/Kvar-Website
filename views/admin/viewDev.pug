extends ./header.pug
block append head 
  link(href="/public/css/viewProduct.css", rel='stylesheet')
block content
    .container-fluid
        a(href="/admin/viewDev/"+blog._id+"/edit") Edit Dev
        form(action = "/admin/viewDev/"+blog._id+"/delete?_method=DELETE" enctype="multipart/form-data" method = "POST")
            button(type="submit") Delete Development 
        br
        form(action = "/admin/viewDev/"+blog._id+"/sendMAil" enctype="multipart/form-data" method = "POST")
            button(type="submit") Send MAil
        br
        p 
            = "Email Status: " + blog.status
        br
        h2 
            = "Title: " + blog.title
        br
    
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
        -var count = 0
        each image of blog.image
            -count += 1
        -for(let i=0;i<count;i++){
            -if(i==0){
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            -}
            -else{
                li(data-target="#carouselExampleIndicators" data-slide-to=i)
            -}
        -}    
        </ol>
        <div class="carousel-inner">
            -for(let i=0;i<count;i++){
                -if(i==0){
                    <div class="carousel-item active">
                        img(class="d-block w-100" src="/public/Dev/"+blog.image[i].filename alt="First slide")
                    </div>
                -}
                -else{
                    <div class="carousel-item">
                        img(class="d-block w-100" src="/public/Dev/"+blog.image[i].filename alt="First slide")
                    </div>
                -}
            -}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        </div>
        br
        h4 Development  Description
        ul 
            each para in blog.description
                li
                    = para 
        br
        p 
            strong
                =  "Author: " 
            = blog.author

