extends ./header.pug
block append head 
  link(href='/public/css/viewProducts.css', rel='stylesheet')
  link(href='/public/css/addProduct.css', rel='stylesheet')
block content
   .container-fluid 
    br
    br
    h2 Creative Mail Database
    if images != null 
      table.table.table-hover
        tr 
            th Image
            th Delete Image
        each image in images
            tr 
                td 
                    div(class="img-thumb")
                        img(src="/public/EmailImage/"+image)
                td 
                    form(action = 'Cmail/'+image+'/delete?_method=DELETE' enctype="multipart/form-data" method = "POST")
                        button(type="submit") Delete Image
    else
      p No Images found