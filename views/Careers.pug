extends ./header.pug
block content
  .mt-3
     
    main#main
      // ======= Breadcrumbs =======
      section.breadcrumbs
        .container
          ol
            li
              a(href='index.html') Home
            li Careers
          h2 Careers at KVAR TECH
      // End Breadcrumbs
      // Jobs Start
      .container-xxl.py-5
        .container
          h3.text-center.mb-5.wow.fadeInUp(data-wow-delay='0.1s')
            | Job Listing
            br
            br
            .tab-class.text-center.wow.fadeInUp(data-wow-delay='0.3s')
              .tab-content
                #tab-1.tab-pane.fade.show.p-0.active
                 each career in careers
                  .job-item.p-4.mb-4
                    .row.g-4
                      .col-sm-12.col-md-8.d-flex.align-items-center
                        img.flex-shrink-0.img-fluid.border.rounded(src='../public/Careers/'+career.image[0].filename alt='' style='width: 80px; height: 80px;')
                        .text-start.ps-3
                            h4.mb-3 
                                =career.title
                            h5.mb-3 
                                i.fa.fa-map-marker-alt.text-primary.me-2.mb-3
                                | Mumbai, India  &nbsp;&nbsp;&nbsp;                                       
                                =career.type 
                                | &nbsp;&nbsp;&nbsp; 
                                =career.Salary
                      .col-sm-12.col-md-4.d-flex.flex-column.align-items-start.align-items-md-end.justify-content-center
                        .d-flex.mb-3
                          a.btn.btn-primary(href='/Careers/'+career._id) Apply Now
 
      // Jobs End
    // End #main
